@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_layout.cshtml";
}
@using PafoodicSeacod.ViewModels

@model NewsletterViewModel




@if (User.Identity.IsAuthenticated)
{ 
    <br />
    <p>Hello, @User.Identity.Name</p>

    <p>@Html.ActionLink("Subscribers - Admin access only", "Subscribers")</p>


    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class-"btn btn-default" value="Log out" />
    }
}

else
{

    @using (Html.BeginForm())
    {
        @Html.LabelFor(signup => signup.Email)
        @Html.TextBoxFor(signup => signup.Email)

        @Html.LabelFor(signup => signup.Phone)
        @Html.TextBoxFor(signup => signup.Phone)

        <input type="submit" class="btn" />
    }


    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>


}
