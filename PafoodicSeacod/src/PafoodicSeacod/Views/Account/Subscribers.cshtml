@*@using PafoodicSeacod.ViewModels
@model NewsletterViewModel*@

@model IEnumerable<PafoodicSeacod.Models.AppUser>

@using System.Security.Claims

@{
    ViewData["Title"] = "Subscribers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{

    @if (Model.Any())
    {
        <h2>Here are our newsletter subscribers:</h2>
        <hr />

        <ul>
            @foreach (var listItem in Model)
            {
                <li>@Html.DisplayFor(modelItem => listItem.UserName) | @Html.DisplayFor(modelItem => listItem.PhoneNumber)</li>
            }
        </ul>
    }
    else
    {
        <p>No subscribers.</p>
    }
}
else
{
        < p > @Html.ActionLink("Login", "Login") </ p >

    }